generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String   @id @default(cuid())
  title       String
  time        DateTime
  assignee    String   // Primary assignee (Slack user ID)
  assignees   String[] // All mentioned users (Slack user IDs)
  channelId   String
  createdBy   String   // Creator's Slack ID
  createdAt   DateTime @default(now())
  completed   Boolean  @default(false)
}

